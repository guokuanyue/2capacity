// 标题背景色
@header-background-color: #303740;
// 板块背景色
@banner-background-color: #25292e;

// 日背景
.day-titlebg {
  background-color: #2b74cd;

}

// 月背景
.month-titlebg {
  background-color: #2ba9cd;

}

// 年背景
.year-titlebg {
  background-color: #592dbb;

}

// 实时背景
.now-titlebg {
  background-color: #6b1eac;

}

// 总报表界面
.report {
  width: 85%;
  margin: 0 auto;
  min-width: 1050px;


  // 标题
  .report-title {
    height: 40px;
    line-height: 40px;
    width: 97.5%;
    padding-left: 2.5%;
    color: white;
    margin-bottom: 20px;
    background-color: @header-background-color;
  }

  // 累积量报表四部分
  //版心
  .report-wrap {
    width: 100%;
    margin-bottom: 20px;
    display: flex;

    // 累积量报表通用盒子
    .report-con-box {
      width: 24%;
      min-width: 300px;
      margin-right: 1%;

      // 日累积量标题
      .report-con-title {
        width: 100%;
        height: 60px;
        line-height: 60px;
        text-align: center;
        color: #fff;
      }

      // 标题以下的版心
      .repot-con-con {
        width: 100%;
        padding-bottom: 30px;
        background-color: @banner-background-color;
        padding-top: 9.7%;

        // 下拉选择
        .select-factory {
          width: 85.55%;
          height: 40px;
          border-radius: 5px;
          border: 1px solid #535960;
          background: #25292e;
          color: #adb6c2;
          margin-left: 7%;
          margin-bottom: 12%
        }

        // 时间选择
        .report-dateRange {
          .el-date-editor--daterange.el-input__inner {
            width: 85.55%;
            margin-left: 7%;
            background: #25292e;
            border: 1px solid #535960;
            padding-right: 0px;
            margin-bottom: 12%;
          }
        }

        // 三个按钮
        .report-con-btn {


          .report-btn {
            border: 1px solid #535960;
            background: #25292e;
            color: #adb6c2;
            margin-left: 7%;
            padding: 2.5% 4%;
            border-radius: 5px;


            &:hover {
              background-color: #2A84F6;
              color: #fff;
              border: 1px solid #2A84F6;
            }
          }
        }

        // 分时报表三部分
        // 日报表
        // 选择日期
        .report-date {
          margin-bottom: 12%;
          margin-left: 7%;
        }

        // 一级分类
        .repot-con-first-title {
          margin-top: -7%;
          padding: 0 0 2% 7%;
          color: #adb6c2;
        }

        // 层联选择
        .report-el-cascader {
          padding: 0 0 2% 7%;
          color: #adb6c2;
        }

        // 日分时报表三个按钮
        .report-con-btn2 {
          margin-top: 10%;
        }
      }
    }
  }


}
